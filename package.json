{
  "name": "pexiora-tt",
  "version": "0.1.0",
  "description": "Site web du club de tennis de table de Pexiora",
  "private": true,
  "scripts": {
    "dev": "netlify dev",
    "build": "zola build",
    "lint": "pnpm lint:prettier && pnpm lint:markdownlint",
    "lint:fix": "pnpm lint:prettier:fix && pnpm lint:markdownlint:fix",
    "lint:prettier": "prettier --check \"**/*.{css,scss,sass,html,js,ts,json,md,toml,yaml}\"",
    "lint:prettier:fix": "prettier --write \"**/*.{css,scss,sass,html,js,ts,json,md,toml,yaml}\"",
    "lint:markdownlint": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:markdownlint:fix": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "prepare": "husky install",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "markdownlint-cli": "^0.37.0",
    "netlify-cli": "^17.38.1",
    "prettier": "^3.6.2",
    "prettier-plugin-toml": "^2.0.6"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
